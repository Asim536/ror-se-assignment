<div class="container">
  <h1>Employees</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Salary</th>
        <th scope="col">Position</th>
        <th scope="col">Date Of Birth</th>
        <th colspan="2" scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'employee_row', collection: @employees.dig("data"), as: :employee %>
    </tbody>
  </table>
  <%= render 'pagination', pages: @employees.dig("meta") %>
</div>
