<%= form_with(url: form_url, method: form_method) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, value: @employee&.dig("name"), class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :position, class: 'form-label' %>
    <%= f.text_field :position, value: @employee&.dig("position"), class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :salary, class: 'form-label' %>
    <%= f.number_field :salary, value: @employee&.dig("salary"), class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :date_of_birth, "Date of Birth", class: 'form-label' %>
    <%= f.date_field :date_of_birth, value: @employee&.dig("date_of_birth"), class: 'form-control' %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>
