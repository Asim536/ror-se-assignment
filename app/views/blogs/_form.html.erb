<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h4>
      <ul>
        <% blog.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter blog title' %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', rows: 5, placeholder: 'Write your blog content here...' %>
  </div>

  <%= form.submit "Submit", class: 'btn btn-primary' %>
<% end %>
